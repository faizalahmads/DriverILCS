<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pesan">

    <TextView
        android:id="@+id/pesan"
        android:layout_width="187dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Pesan"
        android:textSize="35sp"
        android:textColor="#006DB2"
        android:textStyle="bold"
        android:gravity="top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:text="Logout"
        android:textColor="#A10608"
        android:background="@drawable/btn_logout"/>

    <!-- Rectangle 12 -->
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="226dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:background="@drawable/frame_hitam"
        android:layout_centerInParent="true"
        />
    <!-- image 2 -->
    <View
        android:id="@+id/image_2"
        android:layout_width="200dp"
        android:layout_height="105.67dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="158dp"
        android:background="@drawable/image_1"
        />
    <TextView
        android:id="@+id/nama_driver"
        android:layout_width="199dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="275dp"
        android:text="Nama Driver    :"
        android:gravity="top"
        android:textColor="#000000"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/no_kendaraan"
        android:layout_width="199dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="298dp"
        android:text="No Kendaraan :"
        android:gravity="top"
        android:textColor="#000000"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/posisi"
        android:layout_width="199dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="323dp"
        android:text="Posisi               :"
        android:gravity="top"
        android:textColor="#000000"
        android:textSize="17dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="350dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="15dp">
            <EditText
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame_hitam"
                android:hint="Nama ...."
                android:layout_marginTop="15dp"/>
            <EditText
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame_hitam"
                android:hint="Titik Awal ...."
                android:layout_marginTop="15dp"/>
            <EditText
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame_hitam"
                android:hint="Titik Akhir ...."
                android:layout_marginTop="15dp"/>
            <EditText
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame_hitam"
                android:hint="Jam ...."
                android:layout_marginTop="15dp"/>
            <EditText
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame_hitam"
                android:hint="Jumlah Penumpang ...."
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/logres"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:backgroundTint="#A2988E"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>