<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/regist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/regist">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:paddingLeft="230dp"
        android:paddingRight="20dp"
        android:src="@drawable/logope" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DRIVER ILCS"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="37dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="270dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle_1"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/form"
            android:drawableStart="@drawable/nama"
            android:hint="Masukkan Nama ...."
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/etDivisi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/form"
            android:drawableStart="@drawable/divisi"
            android:hint="Masukkan Divisi ...."
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/etNip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/form"
            android:drawableStart="@drawable/nipp"
            android:hint="Masukkan NIP ...."
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/form"
            android:drawableStart="@drawable/key"
            android:hint="Masukkan Password ...."
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/teLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:text="I have any account"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnRegist"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#A2988E"
            android:text="Registrasi"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>



</RelativeLayout>