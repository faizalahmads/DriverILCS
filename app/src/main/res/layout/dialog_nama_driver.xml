    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioButton
        android:id="@+id/rbWawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wawan" />

    <RadioButton
        android:id="@+id/rbRizal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rizal" />

    <RadioButton
        android:id="@+id/rbEndra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endra" />

</LinearLayout>