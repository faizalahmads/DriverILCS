<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#225">

    <EditText
        android:id="@+id/etIdEdit"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvNamaEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Nama"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:background="@drawable/form" />
    <TextView
        android:id="@+id/tvNomorPlat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:hint="Nomor Plat"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:background="@drawable/form" />
    <EditText
        android:id="@+id/etJadwalService"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:hint="Jadwal Service"
        android:background="@drawable/form"/>
    <TextView
        android:id="@+id/teLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:text="*TTTT - BB - HH"
        android:textColor="@color/white" />

</LinearLayout>