<!-- list_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/jam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No."
        android:textColor="#000000"
        android:layout_weight="2"
        android:gravity="start"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_weight="1"
        android:gravity="start"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="#000000"
        android:layout_weight="3"
        android:gravity="start"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/titik_awal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titik Awal"
        android:textColor="#000000"
        android:layout_weight="3"
        android:gravity="start"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/titik_akhir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titik Akhir"
        android:textColor="#000000"
        android:layout_weight="2"
        android:gravity="start"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/jumlah_penumpang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jumlah Penumpang"
        android:textColor="#000000"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/nama_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Driver"
        android:textColor="#000000"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginLeft="5dp" />

</LinearLayout>
